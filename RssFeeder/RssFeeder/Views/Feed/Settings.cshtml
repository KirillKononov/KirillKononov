@model FeedProcessing.Models.FeedData

<br />
<h2 class="text-info">Настройки</h2>
<br />

<form method="post" asp-action="Settings">
    <div class="border" style="padding: 30px">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FeedUrl" class="col-form-label">URL</label>
            </div>
            <div class="col-5">
                <input asp-for="FeedUrl" class="form-control" id="urlCheck" />
            </div>
            <span class="text-danger" id="urlCheck-message"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UpdateTimeInSeconds" class="col-form-label">Время обновления в секундах</label>
            </div>
            <div class="col-5">
                <input asp-for="UpdateTimeInSeconds" class="form-control" min="1" max="86400"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" asp-route-id="@Model" value="Сохранить" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Назад</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <script src='@Url.Content("~/js/urlChecker.js")'></script>
}